<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="/css/user_management.css">

<div class="form-container">
    <form action="/users/add" method="post">

        <input type="text" name="username" placeholder="Your Name" required>
        <input type="email" name="email" placeholder="Your Email" required>
        <input type="password" name="password" placeholder="Password" required>
        <input type="password" name="confirm_password" placeholder="Confirm Password" required>
    
        <button type="submit">Add User</button>
    
    </form>
</div>

<div class="list">
    <ul>
    <% for(let i=0;i<users.length;i++){ %>
        <li>
            <div><%= users[i].email %></div>
            <div><%= users[i].username %></div>
            <div>
                <a href="/users/delete/?id=<%= users[i]._id %>">
                <i class="fas fa-user-times"></i>
                </a>  
            <form action="/users/edit" method="post">
                <input type="text" name="username" placeholder="Your Name" value="<%= users[i].username %>" required>
                <input type="email" name="email" placeholder="Your Email" value="<%= users[i].email %>" readonly required>
                <input type="password" name="password" placeholder="Password" required>
                <input type="password" name="confirm_password" placeholder="Confirm Password" required>
                <button type="submit">edit</button>
           </form>
            </div>
        </li>
    <% } %>
    </ul>
</div>